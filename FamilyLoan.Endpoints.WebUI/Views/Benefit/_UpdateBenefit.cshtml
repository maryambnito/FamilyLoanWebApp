@model UpdateBenefitsViewModel
<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                    <div class="iq-header-title">
                        <h4 class="card-title">ویرایش حساب سود</h4>
                    </div>
                </div>
                <div class="iq-card-body">
                    <div class="new-user-info">
                        <form class="mr-3 position-relative" method="post" asp-controller="Benefit" asp-action="UpdateDescription" id="frmUpdateDescription">
                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <input hidden asp-route-Id="@Model.Id" id="modelid" />
                                <div class="form-group col-md-12">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" placeholder="توضیحات" rows="3" asp-for="Description"></textarea>

                                </div>

                                <hr />





                            </div>

                            <button type="submit" class="btn btn-warning mb-3">
                            <i class="ri-edit-2-fill ml-2"></i>ویرایش</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $("#frmUpdateDescription").on('submit', function (e) {
        e.preventDefault();

      
        $.ajax({
            type: 'POST',
            url: "/Benefit/UpdateDescription",
            data: $('#frmUpdateDescription').serialize(),
            success: function (response) {

                $('#updateBenefitModal').modal('toggle');
                $('#updateBenefitModal').on('hidden.bs.modal', function (e) {
                    location.reload(true);
                  
                })

            },
               
    error: function (response) {
                alert("Error: " + response);
            }

       
        });

    });

</script>