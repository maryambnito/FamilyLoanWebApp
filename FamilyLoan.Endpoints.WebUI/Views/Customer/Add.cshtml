@model CreateCustomerViewModel
@{

    ViewData["Title"] = "افزودن مشتری";
}
<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                    <div class="iq-header-title">
                        <h4 class="card-title">افزودن مشتری</h4>
                    </div>
                </div>
                <div class="iq-card-body">
                    <div class="new-user-info">

                        <form asp-action="Add" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mr-3"></div>
                            <div class="row">

                                <div class="form-group col-md-6">
                                    <label asp-for="FirstName"></label>
                                    <input type="text" class="form-control" id="fname" placeholder="نام" asp-for="FirstName">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="LastName"></label>
                                    <input type="text" class="form-control" id="lname" placeholder="نام خانوادگی" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="NationalCode"></label>
                                    <input type="text" class="form-control" placeholder="کد ملی" asp-for="NationalCode">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="CardNo"></label>
                                    <input type="text" class="form-control" placeholder="شماره کارت" asp-for="CardNo">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Mobile"></label>
                                    <input type="tel" class="form-control" placeholder="شماره موبایل" asp-for="Mobile">
                                </div> 
                                <div class="form-group col-md-6">
                                    <label asp-for="Username"></label>
                                    <input type="text" class="form-control" placeholder="نام کاربری " asp-for="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>


                                </div> 
                                <div class="form-group col-md-6">
                                    <label asp-for="Password"></label>
                                    <input type="text" class="form-control" placeholder="کلمه عبور" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Passwordconfirm"></label>
                                    <input type="text" class="form-control" placeholder="تایید کلمه عبور" asp-for="Passwordconfirm">
                                    <span asp-validation-for="Passwordconfirm" class="text-danger"></span>

                                </div>
                                <div class="form-group col-md-12">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" placeholder="توضیحات" rows="2" asp-for="Description"></textarea>

                                </div>

                                <hr />





                            </div>

                            <button type="submit" class="btn btn-success mb-3 ml-0 mb-2"><i class="ri-save-fill ml-2"></i>افزودن</button>
                            <button asp-controller="Customer" asp-action="List" class="btn btn-secondary mb-3"><i class="ri-refresh-fill ml-2"></i>انصراف</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts
{
    <script src="~/libs/jquery-validate/jquery.validate.js"></script>
    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
