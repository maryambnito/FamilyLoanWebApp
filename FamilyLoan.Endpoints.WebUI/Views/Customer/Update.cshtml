@model UpdateCustomerViewModel
@{

    ViewData["Title"] = "ویرایش مشتری";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                    <div class="iq-header-title">
                        <h4 class="card-title">ویرایش مشتری</h4>
                    </div>
                </div>
                <div class="iq-card-body">
                    <div class="new-user-info">
                        <form asp-action="Update" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="FirstName"></label>
                                    <input type="text" class="form-control" id="fname" placeholder="نام" asp-for="FirstName">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="LastName"></label>
                                    <input type="text" class="form-control" id="lname" placeholder="نام خانوادگی" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="NationalCode"></label>
                                    <input type="text" class="form-control" id="fname" placeholder="کد ملی" asp-for="NationalCode">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="CardNo"></label>
                                    <input type="text" class="form-control" id="fname" placeholder="شماره کارت" asp-for="CardNo">
                                </div>
                                <div class="form-group col-md-12">
                                    <label asp-for="Description"></label>
                                    <input type="text" class="form-control" id="cname" placeholder="توضیحات" asp-for="Description">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Mobile"></label>
                                    <input type="text" class="form-control" id="mobno" placeholder="شماره موبایل" asp-for="Mobile">
                                </div>



                            </div>
                            <hr>

                            <button type="submit" class="btn btn-warning mb-3">
                            <i class="ri-brush-fill ml-2"></i>ویرایش</button>
                            
                            <a asp-controller="Customer" asp-action="List"
                               class="btn btn-secondary mb-3"><i class="ri-refresh-fill ml-2"></i>انصراف</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







@section Scripts
{
    <script src="~/libs/jquery-validate/jquery.validate.js"></script>
    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
