@model AddMoeinViewModel
@{

    ViewData["Title"] = "افزودن معین";
}
<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                    <div class="iq-header-title">
                        <h4 class="card-title">افزودن معین</h4>
                    </div>
                </div>
                <div class="iq-card-body">
                    <div class="new-user-info">

                        <form asp-action="Add" asp-controller="Moein" method="post" enctype="multipart/form-data">
                            <div class="row">

                                <div class="form-group col-md-6">
                                    <label asp-for="Date"></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text cursor-pointer " id="spanDate">تاریخ</span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Date" value="1400/01/01">

                                        <span asp-validation-for="Date" class="text-danger"></span>

                                    </div>


                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Debtor"></label>
                                    <input type="number" class="form-control text-danger text-bold amounts"
                                           placeholder="مبلغ بدهکار" value="0" asp-for="Debtor">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Creditor"></label>
                                    <input type="number" class="form-control text-bold text-success amounts"
                                           placeholder="مبلغ بستانکار" value="0" asp-for="Creditor">
                                </div>
                               
                                <div class="form-group col-md-12">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" placeholder="توضیحات" rows="2" asp-for="Description"></textarea>
                                                <span asp-validation-for="Description"  class="text-danger"></span>

                                </div>

                                <hr />





                            </div>

                            <button type="submit" class="btn btn-success mb-3 ml-0 mb-2"><i class="ri-save-fill ml-2"></i>افزودن</button>
                            <button asp-controller="Moein" asp-action="List" class="btn btn-secondary mb-3"><i class="ri-refresh-fill ml-2"></i>انصراف</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts
{
   <script>
       $(document).ready(function () {
           
           $('#spanDate').MdPersianDateTimePicker({
               targetTextSelector: '#Date',
               FormData: "yyyy/mm/dd"

           });


       });

   </script>
}
