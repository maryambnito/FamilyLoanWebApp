@model ReportMoeinKolDTO
@{
    ViewData["Title"] = "دفنر کل";
}
<table class="table table-striped table-bordered table-hover mt-4" role="grid" aria-describedby="user-list-page-info">
    <thead class="thead-dark">
        <tr>

            <th> شرح</th>
            <th> بدهکار</th>
            <th> بستانکار</th>
            
        </tr>
    </thead>
    <tbody>

        <tr>
            <td id="trmaster">معین جزء</td>
            <td class="loanamount text-danger" id="textbold">@Model.SumMoeinJoz.SeparatorNum()</td>
            <td></td>

        </tr>

        <tr>
            <td id="trmaster">موجودی افراد</td>
            <td></td>
            <td class="amounts" id="textbold">@Model.SumAccounts.SeparatorNum()</td>

        </tr>



        <tr>
            <td id="trmaster">مانده وام</td>
            <td class="loanamount text-danger" id="textbold">@Model.SumLoans.SeparatorNum()</td>
            <td></td>

        </tr>
        <tr>
            <td id="trmaster">سود و کارمزد</td>
            <td></td>
            <td class="amounts" id="textbold">@Model.SumBenefits.SeparatorNum()</td>

        </tr>

    </tbody>
    <tfoot>
        <tr style="background-color: aquamarine;" >
            <td id="trmaster">جمع کل</td>
            <td  class="loanamount" id="textbold">@Model.TotalDebtor.SeparatorNum()</td>
            <td class="amounts" id="textbold">@Model.TotalCreditor.SeparatorNum()</td>

        </tr>
    </tfoot>
</table>